<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PoolCheck</servlet-name>
        <servlet-class>Controller.PoolAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PoolGet</servlet-name>
        <servlet-class>Controller.PoolGet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>Controller.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mypools</servlet-name>
        <servlet-class>Controller.Mypools</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>setStatusPool</servlet-name>
        <servlet-class>Controller.setStatusPool</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getStatusPool</servlet-name>
        <servlet-class>Controller.getStatusPool</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prevStatusPool</servlet-name>
        <servlet-class>Controller.prevStatusPool</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PoolGet</servlet-name>
        <url-pattern>/PoolGet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PoolCheck</servlet-name>
        <url-pattern>/PoolCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mypools</servlet-name>
        <url-pattern>/Mypools</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>setStatusPool</servlet-name>
        <url-pattern>/setStatusPool</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getStatusPool</servlet-name>
        <url-pattern>/getStatusPool</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prevStatusPool</servlet-name>
        <url-pattern>/prevStatusPool</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
